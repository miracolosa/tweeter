<h5>Home</h5>
<div class="form-tweet mt-3">
  <%= render "form" %>
</div>

<%= turbo_frame_tag "tweets" do %>
  <% @tweets.each do |tweet| %>
    <%= render "tweets/#{tweet.tweet_type}", tweet: tweet %>
  <% end %>
<% end %>

<%= turbo_frame_tag "empty_state" do %>
  <% if @tweets.none? %>
    <%= render "tweets/empty_state" %>
  <% end %>
<% end %>
