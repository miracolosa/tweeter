<div>
  <div class="d-flex align-items-start">
    <%# Avatar %>
    <%= link_to profile_path(tweet.user), data: {turbo: false} do  %>
      <%= image_tag tweet.user.profile_image, class: "avatar", alt: "avatar" %>
    <% end %>

    <%# Tweet body %>
    <div class="ms-2">
      <div class="d-flex justify-content-start align-items-center">
        <span class="tweet-bold me-1"><%= tweet.user.name %></span>
        <span class="tweet-grey">@<%= tweet.user.username %></span>
      </div>
      <%= tweet.body %>
    </div>
  </div>
  <%# Buttons %>
  <div class="d-flex align-items-center mt-1">
  <%= render "shared/tweet_bar" %>
  </div>
</div>
